<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

<LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="2dp"
        android:id="@+id/lin"
        android:layout_alignParentTop="true"
>
    <ImageButton
            android:src="@drawable/ic_navigate_next_black_24dp"
            android:contentDescription="@string/settings_view"
            android:id="@+id/gotoView"
            style="@style/AppTheme.settings_button"
    />
    <ImageButton
            android:src="@drawable/ic_restore_black_24dp"
            android:contentDescription="@string/settings_reset"
            android:id="@+id/reset_button"
            style="@style/AppTheme.settings_button"
    />
</LinearLayout>
<ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lin"
>
<LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        >

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_acceleration"/>
    <SeekBar
            style="@style/AppTheme.seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seek_bar_accel"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_horizontal_speed"/>
    <SeekBar
            style="@style/AppTheme.seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seek_bar_horiz_speed"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_friction_coefficient"/>
    <SeekBar
            style="@style/AppTheme.seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seek_bar_friction_coeff"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_energy_loss_when_collide"/>
    <SeekBar
            style="@style/AppTheme.seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seek_bar_energy_loss"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_set_color"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
    >

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_background_color"
            android:textAllCaps="false"
            android:id="@+id/button_bg_color"
            style="@style/AppTheme.settings_button"
    />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_object_color"
            android:textAllCaps="false"
            android:id="@+id/button_obj_color"
            style="@style/AppTheme.settings_button"
    />
    </LinearLayout>
    <TextView
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_object"
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:textAppearance="?android:textAppearanceLarge"
            android:id="@+id/color_preview"
    />

</LinearLayout>
</ScrollView>
</RelativeLayout>