<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.menu_button" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingBottom">25dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_margin">@dimen/menu_divider_height</item>
    </style>
    <style name="AppTheme.calc_button_operator" parent="@style/AppTheme.borderless_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">@dimen/calc_item_font_size</item>
    </style>
    <style name="AppTheme.calc_button_operator.margin">
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="AppTheme.calc_text_view">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:freezesText">true</item>
    </style>

    <style name="AppTheme.calc_text_view.normal" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/calc_item_font_size</item>
    </style>

    <style name="AppTheme.calc_text_view.err" parent="@style/TextAppearance.Design.Error">
        <item name="android:textSize">@dimen/calc_item_font_size</item>
    </style>
</resources>
